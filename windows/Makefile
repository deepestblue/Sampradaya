PS = powershell.exe -NoLogo -NoProfile -NonInteractive -ExecutionPolicy Bypass -Command
TYPEFACEPATH = '../src/Sampradaya.ttf'
BINDIR = ../bin

install:
	$(PS) $(BINDIR)/install_typeface.ps1 -Path $(TYPEFACEPATH) -Name 'Sampradaya Regular'

regenerate_masters:
	$(PS) $(BINDIR)/generate_images.ps1 -Rasteriser $(BINDIR)/rasterise_text_windows.exe -OutputRoot ../masters/windows -TypeFace $(TYPEFACEPATH)

test:
	$(PS) $(BINDIR)/run_tests.ps1 -TypeFace $(TYPEFACEPATH) -Rasteriser $(BINDIR)/rasterise_text_windows.exe -MasterImages ../masters/windows

.PHONY: install regenerate_masters test
